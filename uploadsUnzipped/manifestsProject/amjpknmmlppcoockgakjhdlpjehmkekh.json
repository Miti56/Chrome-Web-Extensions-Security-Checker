{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Facebook Privacy Manager",
  "version": "0.0.4",
  "manifest_version": 2,
  "description": "This extension blocks Facebook's ability to send read receipts and typing indicators in Facebook Messenger.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "page": "src/bg/background.html"
  },
  "permissions": [
    "*://*.facebook.com/*",
    "webRequest", 
    "webRequestBlocking",
    "tabs"
  ],
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Facebook Privacy Manager",
    "default_popup": "html/popup.html"
  }
}