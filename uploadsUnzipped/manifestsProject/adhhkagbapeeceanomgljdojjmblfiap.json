{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name" : "webinar.2talk.com.au Screenshare Extension",
    "author": "webinar.2talk.com.au",
    "version" : "0.0.6",
    "manifest_version" : 2,
    "minimum_chrome_version": "34",
    "description" : "Chrome Extension granting WebRTC screen capturing capabilities to webinar.2talk.com.au meetings.",
    "homepage_url": "https://webinar.2talk.com.au",
    "background": {
        "scripts": ["background-script.js"],
        "persistent": true
    },
    "externally_connectable": {
       "matches": [
           "*://*.bigbluebutton.org/*",
           "*://*.webinar.2talk.com.au/*"
         ]
    },
    "icons" : {
        "48" : "icon.png"
    },
    "permissions": [
        "desktopCapture"
    ],
    "web_accessible_resources": [
        "icon.png"
    ]
}

