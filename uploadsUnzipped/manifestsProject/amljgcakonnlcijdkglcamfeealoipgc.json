{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name" : "Videosessie scherm delen",
  "author": "Creapolis Media BV",
  "version" : "1.2",
  "manifest_version" : 2,
  "minimum_chrome_version": "34",
  "description" : "This Chrome extension is developed primary for videosessie.nl. It doesn't do anything except capture content of your screen.",
  "homepage_url": "https://videosessie.nl/",
  "background": {
    "scripts": ["background-script.js"],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.videosessie.nl/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
