{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "indicina.tv",
  "description": "Digital signage",
  "version": "0.0.1.3",
  "manifest_version": 2,
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "app": {
	"background": {
      "scripts": ["background.js"]
    }
  },
  "kiosk_enabled" : true,
  "permissions": [
    "power",
    "storage",
	  "webview",
	  "fullscreen",
    "pointerLock",
    "unlimitedStorage",
    "system.display"
  ]
}