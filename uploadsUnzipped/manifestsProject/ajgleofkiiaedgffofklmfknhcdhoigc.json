{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name": "Space Galaxy & Stars",
    "description": "Space Galaxy & Stars shows videos, photos, info about space galaxy, stars, planets, earth...",
    "version": "1.0.0",
    "manifest_version": 2,
    "background": {
        "scripts": [ "jquery.js", "background.js" ]
    },
    "browser_action": {
        "default_icon": "img_sep/ico_19.png",
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self'; object-src 'self'",
    "permissions": ["tabs","http://*/*","https://*/*","unlimitedStorage"],
    "icons": {
        "48": "img_sep/ico_48.png"
    }
}