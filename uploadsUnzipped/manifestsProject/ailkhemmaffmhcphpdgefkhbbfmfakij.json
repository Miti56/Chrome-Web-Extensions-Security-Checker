{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,

  "name": "Hello English",
  "short_name": "Hello English",
  "description": "Grammar correction service by Hello English - Asiaâ€™s #1 language learning platform",
  "homepage_url": "https://helloenglish.com/", 
  "version": "1.0.6",
  "icons": {
		"16": "icons/16px.png",
		"48": "icons/48px.png",
		"128": "icons/128px.png"
   },
	
  "browser_action": {
    "default_icon": "images/29px.png",
    "default_popup": "popup.html",
    "persistent": false
  },
  "background": {
  	"scripts": ["js/ca_chrome_background.js"]
  },
  "externally_connectable": {
