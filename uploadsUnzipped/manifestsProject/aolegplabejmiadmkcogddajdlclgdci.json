{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,
  "name": "Stadindex.nl",
  "short_name": "Stadindex",
  "description": "Altijd op de hoogte van het laatste nieuws & weer uit jouw stad of dorp.",
  "version": "1.0.1",
  "icons": { "16": "icon16.png",
           "19": "icon19.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "permissions": [
    "alarms",
    "https://www.stadindex.nl/"
  ],
  "background": {
    "scripts": ["eventpage.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon19.png",
    "default_popup": "index.html"
  }
}