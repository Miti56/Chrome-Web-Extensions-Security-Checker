{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,
  "name": "Easy Translator",
  "description": "This extension allows the user to translate selected text to multiple languages.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Translate"
  },
  "permissions": [
    "activeTab",
    "<all_urls>"
  ]
}