{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name": "Second Search",
    "manifest_version": 2,
    "version": "0.0.5",
    "description": "Second Search [Beta]",
    "background": {
        "scripts": [
            "jquery-2.1.3.min.js", "background.js"
        ]
    },
    "permissions": [
        "contextMenus",
        "tabs",
        "storage"
    ],
    "icons": {
        "128": "images/logo-128.png",
        "48": "images/logo-48.png",
        "16":"images/logo-16.png"
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "browser_action": {
        "default_icon": {
            "19": "images/logo-19.png",
            "38": "images/logo-38.png"
        },
        "default_title": "Second Search",
        "default_popup": "browser_action.html"
    }
}
