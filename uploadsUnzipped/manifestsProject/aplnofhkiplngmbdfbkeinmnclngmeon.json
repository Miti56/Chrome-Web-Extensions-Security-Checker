{
   "background": {
      "scripts": [ "background.js" ]
   },
   "browser_action": {
      "default_icon": "icon_32x32.png",
      "default_title": ""
   },
   "description": "A Todoist panel on your desktop",
   "icons": {
      "128": "icon_128x128.png",
      "16": "icon_16x16.png",
      "32": "icon_32x32.png"
   },
   "content_scripts": [
      {
         "matches":    ["https://todoist.com/*"],
         "css":        ["style.css"]
      }
   ],
   "manifest_version": 2,
   "name": "Todoist Panel",
   "permissions": [ "tabs" ],
   "update_url": "http://clients2.google.com/service/update2/crx",
   "version": "1.0"
}