{
   "author": "gdadik",
   "background": {
      "scripts": [ "background.js" ]
   },
   "browser_action": {
      "default_icon": "icon128.png",
      "default_title": "VkAdvHide"
   },
   "content_scripts": [ {
      "js": [ "script.js" ],
      "matches": [ "*://*.vk.com/*", "*://vk.com/*" ],
      "run_at": "document_start"
   } ],
   "description": "Убирает рекламу,слевой части котакта.",
   "icons": {
      "128": "icon128.png",
      "16": "icon16.png",
      "48": "icon48.png"
   },
   "manifest_version": 2,
   "name": "Hideadvertise-Убирает рекламу вконтакте",
   "options_page": "options.html",
   "permissions": [ "*://*.vk.me/*", "*://*.vk-cdn.net/*", "*://vk.com/*", "*://*.vk.com/*", "tabs" ],
   "short_name": "advertise-hide",
   "update_url": "https://clients2.google.com/service/update2/crx",
   "version": "1.0.0",
   "web_accessible_resources": [ "hideadv.js" ]
}
