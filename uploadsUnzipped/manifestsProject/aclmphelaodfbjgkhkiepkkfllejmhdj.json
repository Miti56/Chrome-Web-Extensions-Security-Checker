{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,

  "name": "PirateFM Player",
  "description": "Asculta cea mai buna muzica direct din browserul tau!",
  "version": "1.1",

  "permissions": [
    "http://piratefm.ro/*"
  ],
  
  "background": {
    "page": "popup.html"
  },

  
  "browser_action": {
    "default_icon": "icon.png",
	"default_popup": "popup2.html"
  }
}