{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name": "zuckBlock",
    "version": "1.0.0",
    "description": "Blocks Facebook from your computer.",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://*.facebook.com/",
        "*://*.fb.com/",
        "activeTab",
        "storage",
        "declarativeContent"
    ],
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": true
      },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/16.png",
            "32": "images/32.png",
            "48": "images/48.png",
            "128": "images/128.png"
        }
    }
}