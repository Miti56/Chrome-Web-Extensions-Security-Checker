{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name": "JustPin.it",
    "version": "0.0.3",
    "description": "Plugin for JustPin.it for pinning job offers.",
    "background" : {
        "scripts": ["popup.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "./icon-16.png"
        }
    },

    "icons": {
        "16": "./icon-16.png",
        "24": "./icon-24.png",
        "32": "./icon-32.png",
        "48": "./icon-48.png",
        "64": "./icon-64.png",
        "72": "./icon-72.png",
        "128": "./icon.png"
    },
    "permissions": [
        "activeTab",
		"storage",
        "tabs"
    ],
    "manifest_version": 2
}