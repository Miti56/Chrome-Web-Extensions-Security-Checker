{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Buscador de Empleo de ZonaJobs Chile",
  "manifest_version":2,
  "version": "2.0.0.2",
  "description": "Notificaciones de nuevos avisos de empleo publicados en ZonaJobs",
  "icons": {
    "128": "128x128_isotipo.png"
  },
  "browser_action": {
    "default_icon":  "128x128_isotipo.png", 
    "default_title": "ZonaJobs",
    "default_popup": "popup.html"
  },
  "background": {"page":"background.html"},
  "permissions": [
    "notifications",
    "https://www.google.com/*",
    "https://ajax.googleapis.com/*",
    "unlimitedStorage",
	"tabs",
	"background"
  ],
  "content_security_policy": "script-src 'self' https://www.google.com https://ssl.google-analytics.com https://ajax.googleapis.com; object-src 'self'"
}

