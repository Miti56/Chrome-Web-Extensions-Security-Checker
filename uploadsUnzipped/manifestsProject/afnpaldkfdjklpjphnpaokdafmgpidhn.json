{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 2,
    "name": "TrollFace Everywhere",
    "short_name": "TrollFaceEverywhere",
    "description": "Replaces (most) images in page by a trollface",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "http://*/*",
        "https://*/*"
    ],
    "web_accessible_resources": [
        "*.webp"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "trollface_128.png",
        "default_title": "TrollFace"
    },
    "icons": {
        "128": "trollface_128.png"
    },
    "author": {
        "name": "Platon Devs"
    }
}
