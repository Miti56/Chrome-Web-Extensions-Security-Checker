{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Peep My Browser",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Peep My Browser",
  "homepage_url": "http://pmb.hammerspacelabs.co",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "libs/jquery/dist/jquery.min.js",
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/options/index.html",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Peep My Browser",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "idle",
    "tabs",
    "cookies",
    "http://*.hammerspacelabs.co/*",
    "http://localhost/*"
  ]
}
