{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,
  "name": "Super Music",
  "version": "0.0.6",
  "description": "超级音乐。您可以播放：QQ会员的歌曲、即使是QQ会员也需要单独购买的歌曲、QQ网页端没有的高品质歌曲、QQ因版权问题全平台都不能播放的歌曲。",
  "browser_action": {
    "default_title": "Super Music",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://c.y.qq.com https://translate.google.cn; object-src 'self'",
  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "options_page": "options.html"
}
