{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 2,
    "description": "Распродажи остатков в М.Видео",
    "name": "Мвидео. Распродажа остатков.",
    "version": "1.0.0",
    "offline_enabled": false,

    "icons": {
        "128": "clearance_sale.png"
    },

    "permissions": [
        "storage",
        "http://*.mvideo.ru/*"
    ],

    "browser_action": {
        "default_title": "Распродажи остатков в М.Видео",
        "default_icon": "clearance_sale.png",
        "default_popup": "popup.html"
    },
    "background": {
        "persistent": false,
        "page": "background.html"
    }
}