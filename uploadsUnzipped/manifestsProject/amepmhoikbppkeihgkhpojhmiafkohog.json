 {
"update_url": "https://clients2.google.com/service/update2/crx",

     "manifest_version": 2,
     "name": "__MSG_appName__",
     "description": "__MSG_appDesc__",
     "default_locale": "es",
     "version": "1.1.16",
     "icons": {
         "16": "img/icon_16.png",
         "128": "img/icon_128.png"
     },
     "browser_action": {
         "default_icon": { 
             "19": "img/icon_16.png",
             "38": "img/icon_128.png" 
         },
         "default_popup": "menu.html"
     },
     "background": {
         "scripts": ["js/vendor/jquery-2.0.3.min.js", "js/background.js"],
         "persistent": false
     },
     "permissions": [   
         "unlimitedStorage",
         "tabs",
         "https://www.nuvelar.com/",
         "geolocation",
         "storage",
         "contextMenus"
     ],
     "sandbox": {
         "pages": [
             "widgets/proxy.html"
         ]
     }
 }