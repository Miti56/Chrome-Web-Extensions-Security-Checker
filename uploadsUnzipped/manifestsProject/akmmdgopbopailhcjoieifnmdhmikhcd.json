{
  "name": "CÔNG CỤ ĐẶT HÀNG - ALOGISTICS.VN",
  "short_name" : "ALOGISTICS",
  "description": "Công cụ hỗ trợ người dùng của alogistics đặt hàng trên website: Taobao.com, Tmall.com và 1688.com",
  "manifest_version": 2,
  "author": "KAITO",
  "version": "0.0.2",
  "homepage_url": "https://alogistics.vn",
  "browser_action": {
    "default_icon": "images/1iconlogo.png"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "css": [
        "css/styles.css"
      ],
      "js": [
          "js/scripts.js"
      ],
      "matches": [
          "https://*.1688.com/*",
          "http://*.1688.com/*",
          "https://*.taobao.com/*",
          "http://*.taobao.com/*",
          "https://*.tmall.com/*",
          "http://*.tmall.com/*",
          "https://*.tmall.hk/*",
          "http://*.tmall.hk/*"
      ]
    }
  ],
  "permissions": [   
    "https://local.alogistics.vn/*",
    "http://local.alogistics.vn/*",
    "https://alogistics.vn/*",
    "http://alogistics.vn/*"
  ],
  "update_url": "https://clients2.google.com/service/update2/crx"
}