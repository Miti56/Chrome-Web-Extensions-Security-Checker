{
"update_url": "https://clients2.google.com/service/update2/crx",

	"manifest_version": 2,

	"author": "P2C",
	"name": "Team Infinit Live Extension",
	"short_name": "Team Infinit",
	"description": "Notifie lorsque la Team Infinit est en live",
	"version": "2.1",
	"background": {
		"persistent": true,
		"scripts": [ 
			"jquery.js",
			"main.js"
		]
	},
	"browser_action": {
		"default_title": "Team Infinit Live Extension",
		"default_icon": "images/off.png",
		"default_popup": "popup.html"
	},
	"icons": {
		"128" : "images/off.png"
	},
	"permissions": [
		"notifications",
		"storage"
	]
}