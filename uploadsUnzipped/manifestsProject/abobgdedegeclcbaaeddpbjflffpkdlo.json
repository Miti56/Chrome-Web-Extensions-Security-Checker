{
"update_url": "https://clients2.google.com/service/update2/crx",

   "background": {
      "page": "background.html",
      "persistent": false
   },
   "browser_action": {
      "default_icon": "freelancer_not_logged_in.png"
   },
   "description": "Brings new Freelancer project notifications to Chrome - You'll never miss any project from Freelancer.com!",
   "icons": {
      "128": "icon_128.png",
      "16": "freelancer_logged_in.png",
      "48": "freelancer_logo_48.png"
   },
   "manifest_version": 2,
   "name": "Notifier for Freelancer.com",
   "permissions": [ "alarms", "tabs", "notifications", "cookies", "webNavigation", "*://*.freelancer.com/" ],
   "version": "2015.2.27"
}
