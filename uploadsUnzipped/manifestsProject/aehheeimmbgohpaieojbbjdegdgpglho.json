{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 2,
    "name": "北哥小秘书",
    "version": "1.0",
    "description": "北哥小秘书是一个浏览器扩展，当前支持chrome、360安全浏览器、360急速浏览器，发布小秘书的目的是让你、阿北、Yii2三者的关系更近。",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon19.png",
            "38": "images/icon38.png"
        },
        "default_title": "北哥小秘书",
        "default_popup": "bootstrap.html"
    },
    "permissions":[
        "*://nai8.me/*",
        "contextMenus",
        "notifications"
    ],
    "background":{
        "scripts": [
            "js/jquery-3.2.1.min.js",
            "js/notify.js",
            "js/background.js"
        ]
    }
}
