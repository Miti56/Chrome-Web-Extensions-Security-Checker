{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 2,
    "name": "天擎路由助手",
    "version": "1.0.0",
    "description": "天擎路由小工具",
    "icons": {
        "16": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_title": "我是pageAction",
        "default_popup": "html/popup.html"
    },
    "permissions": [
        "declarativeContent",
        "storage",
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent" : true
    }
}