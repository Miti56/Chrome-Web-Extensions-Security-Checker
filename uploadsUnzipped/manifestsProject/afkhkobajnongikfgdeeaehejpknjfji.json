{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name" : "GNB Support",
  "author": "GNB",
  "version" : "1.0",
  "manifest_version" : 2,
  "minimum_chrome_version": "34",
  "description" : "This extension is developed for https://globalnoticeboard.com/. It simply capture content of your screen.",
  "homepage_url": "https://globalnoticeboard.com/",
  "background": {
    "scripts": ["background-script.js"],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.globalnoticeboard.com/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
