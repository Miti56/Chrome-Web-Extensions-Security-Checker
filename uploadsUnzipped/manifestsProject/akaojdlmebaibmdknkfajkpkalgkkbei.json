{
"update_url": "https://clients2.google.com/service/update2/crx",

	"manifest_version": 2,
	
	"name": "PDM Integration",
	"description": "This extension integrates Padideh Download Manager monitoring module into the browser.",
	"version": "1.3",
	"icons": {
		"16":"res/16.png",
		"32":"res/32.png",
		"48":"res/48.png",
		"64":"res/64.png",
		"128":"res/128.png"
	},
	
	"background": {
		"scripts": ["main.js"]
	},
	
	"permissions": [
		"webRequest", "http://*/", "https://*/", "*://*/", "http://localhost/",
		"webNavigation",
		"webRequestBlocking",
		"downloads",
		"tabs"
	]
		
}