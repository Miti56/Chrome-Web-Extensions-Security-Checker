{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 2, 
    "name": "Hellstrif Twitch", 
    "description": "Vous informe si il y a un live",
    "version": "1.0",
    "permissions": [
        "notifications"
      ],

    "browser_action": {  
     "default_popup": "index.html" 
     },

    "icons": { 
     "64" : "img/icon_64.png",
     "64" : "img/twitch_off64.png",
     "64": "img/icone64.png"
    },

