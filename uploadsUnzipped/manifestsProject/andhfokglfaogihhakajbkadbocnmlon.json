{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "short_name": "Pick A hex",
  "version": "2.2.1",
  "icons": {
    "128": "/icon/icon128.png",
    "48": "/icon/icon48.png"

  },
  "name": "Pick A hex",
  "description": "Color picker for webmasters and web designers",
  "browser_action": {
    "default_icon": "/icon/icon128.png",
    "default_popup": "index.html",
    "default_title": "Pick A hex"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background": {
    "persistent": true,
    "scripts": [
      "js/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "storage",
    "webNavigation",
    "http://*/*",
    "https://*/*",
    "webRequest",
    "webRequestBlocking",
    "management",
    "cookies"
  ]
}
