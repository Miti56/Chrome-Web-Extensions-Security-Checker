{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "LazyEmail",
  "version": "1.1",
  "description": "LazyEmail Extension",
  "permissions": ["https://www.linkedin.com/*",
    "https://api.linkedin.com/*",
	"https://www.jigsaw.com/*",
	"*://lazyemail.net/*",
	"cookies",
	"webRequest",
    "webRequestBlocking"],

  "background": {
    "scripts": ["jquery-1.11.3.min.js", "background.js"]
  },

  "icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},

  "browser_action": {
		"default_icon": "icon19.png"
	},

  "externally_connectable": {
	     "matches": [	"*://lazyemail.net/*"]
	},

  "manifest_version": 2
}
