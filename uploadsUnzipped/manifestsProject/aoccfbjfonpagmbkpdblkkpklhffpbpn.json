{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,

  "name": "Szamlazz.hu kitöltő",
  "description": "Szamlazz.hu adatlap kitöltő program - Monimi Design",
  "version": "1.1",

  "background" : {
    "scripts" : ["background.js"]
  },
  
  "browser_action": {
    "default_icon": "icon.png"
  },
  
  "icons": { "16": "icon.png",
             "48": "icon48.png",
            "128": "icon128.png" },
  
  "permissions": [
	"tabs",
    "activeTab",
	"clipboardWrite",
	"clipboardRead",
    "https://*.szamlazz.hu/szamla/*"
  ] 
}