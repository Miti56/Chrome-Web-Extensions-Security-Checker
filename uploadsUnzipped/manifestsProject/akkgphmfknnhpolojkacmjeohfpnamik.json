{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name" : "FlatFrog Leap",
  "author": "FlatFrog Laboratories AB",
  "version" : "0.3",
  "manifest_version" : 2,
  "minimum_chrome_version": "34",
  "description" : "Enables screen sharing in FlatFrog Leap",
  "homepage_url": "https://www.flatfrogleap.com/",
  "background": {
    "scripts": ["background-script.js"],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.flatfrog.com/*",
      "https://*.flatfrogleap.com/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "24": "logo24.png",
    "32": "logo32.png",
    "48": "logo48.png",
    "128": "logo128.png",
    "256": "logo256.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
