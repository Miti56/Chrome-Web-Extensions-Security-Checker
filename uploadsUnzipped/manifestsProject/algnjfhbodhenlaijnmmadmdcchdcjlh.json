{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,

  "name": "Vaterafutár MPL kitöltő - OnlineRaketa.hu",
  "description": "Vaterafutár adatlap kitöltő program - onlineraketa.hu",
  "version": "2.5",

  "background" : {
    "scripts" : ["background.js"],
	"persistent": false
  },
  
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  
  "browser_action": {
    "default_icon": "icon.png"
  },
  
  "icons": { "16": "icon.png",
             "48": "icon48.png",
            "128": "icon128.png" },
  
  "permissions": [
	"tabs",
    "activeTab",
	"clipboardWrite",
	"clipboardRead",
    "storage",
    "https://*.vaterafutar.hu/*",
	"https://*/wp-admin/*"
  ] 
}