{
   "background": {
      "persistent": true,
      "scripts": [ "background.js" ]
   },
   "browser_action": {
      "default_icon": "images/padded_16.png",
      "default_title": "Share direct to Padded Corner"
   },
   "description": "Share links from any website to Padded Corner. See the official Padded Corner share count for any link.",
   "icons": {
      "128": "images/padded_128.png",
      "16": "images/padded_16.png",
      "32": "images/padded_32.png",
      "64": "images/padded_64.png"
   },
  "manifest_version": 2,
   "name": "Padded Corner Share Button (by Cozumel)",
   "permissions": [ "tabs", "contextMenus", "http://*/*", "https://*/*" ],
   "update_url": "https://clients2.google.com/service/update2/crx",
   "version": "1.0.0"
}
