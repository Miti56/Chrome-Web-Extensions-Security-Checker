{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Smash the Paywall",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "Upload paywalled articles so friends can read them.",
  "homepage_url": "http://mplewis.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "icons/icon128.png",
    "default_title": "Smash the Paywall",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "tabs",
    "<all_urls>"
  ]
}
