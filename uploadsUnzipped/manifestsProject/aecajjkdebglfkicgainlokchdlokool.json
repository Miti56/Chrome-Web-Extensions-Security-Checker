{
"update_url": "https://clients2.google.com/service/update2/crx",

   "name":"Bipfa (for Chrome)",
   "version":"3.0.1.1",
   "manifest_version": 2,
   "description":"Plugin for Bipfa - #1 Persian Microblogging Platform. Quick access and smart notifications.",
   "icons":{
      "16":"bipfa16.png",
      "48":"bipfa48.png",
      "128":"bipfa128.png"
   },
   "browser_action":{
      "default_icon":"icon.png",
      "default_popup":"bipdex.html"
   },
   "background": {"page": "background.html"},
   "permissions":[
   	  "tabs",
      "http://*.bipfa.net/*",
	  "http://www.bipfa.net/*",
      "cookies",
      "notifications",
	  "contextMenus"
   ],
   "web_accessible_resources": [
    "icon.png",
	"bipfa128.png"
  ]
}