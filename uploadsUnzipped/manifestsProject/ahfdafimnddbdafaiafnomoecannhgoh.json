{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Flip A Video for Youtubeâ„¢",
  "version": "1.0.3",
  "manifest_version": 2,
  "description": "Flip a Video vertically.",
  "browser_action": {
    "default_icon": "icon/off.png",
	"default_title": "Flip"
  },
  "background": {
	"scripts": ["background.js"],
    "persistent": true
  },
   "permissions": [
      "tabs", "activeTab", "storage", "*://*.youtube.com/*"
    ],
	"content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["contentScript.js"],
	  "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
	"theme/mirror.css"
	],	 
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
