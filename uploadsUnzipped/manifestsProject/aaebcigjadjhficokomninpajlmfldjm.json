{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "LoMS",
  "description": "Location Management System",
  "version": "0.4",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
	"permissions": [
	  "browser", "alarms", "notifications", "webview", "sessions","storage",
	  "http://crksol.dyndns.org/",
	  "http://loms.benetonefilms.com",
	  "http://loms.benetonefilm.com",
	  "http://benetone3.dyndns.org"
	],
	"externally_connectable": {
    "matches": [
      "http://loms.benetonefilms.com/",
      "http://loms.benetonefilm.com/",
      "http://benetone3.dyndns.org/",
      "https://ajax.googleapis.com/",
      "*://crksol.dyndns.org/*",
      "*://localhost/*"
    ]
	},
	"content_security_policy": "frame-src 'none'",
  "icons": { "16": "benetone-16.png", "128": "benetone-128.png" },
  
  "publisher_email" : "koon.ktv@gmail.com"
}