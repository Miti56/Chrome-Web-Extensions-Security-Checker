{
"update_url": "https://clients2.google.com/service/update2/crx",

 "name": "OnePlaylist",
 "description": "Control OnePlaylist player. Curate youtube videos to play.",
 "version": "0.1.0",
 "manifest_version": 2,
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "background": { "scripts": ["background.js"] },
    "permissions": [
        "tabs", 
        "http://*/*", 
        "https://*/*"
    ],
 "browser_action": {"default_icon": "icon48.png","default_popup": "popup.html"}
}

