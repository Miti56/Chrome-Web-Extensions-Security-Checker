{
   "manifest_version": 2,
   "version": "1.1.8",
   "name": "划词分享",
   "description": "划词分享，让您随时随地分享好的内容给您的微博、微信、QQ等好友。",
   "icons": {
      "128": "img/icon128.png",
      "48": "img/icon48.png",
      "16": "img/icon16.png"
   },
   "browser_action": {
      "default_icon": "img/icon16.png",
      "default_title": "划词分享"
   },
   "permissions": ["http://*/"],
   "content_scripts": [
        {
            "matches": ["http://*/*"],
            "js": ["modules/ext/share.js"]
        }
    ],
   "update_url": "http://clients2.google.com/service/update2/crx"
}
