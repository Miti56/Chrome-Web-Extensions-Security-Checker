{
"update_url": "https://clients2.google.com/service/update2/crx",

  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "icon-32-black.png",
    "default_popup": "index.html"
  },
  "description": "Индикатор здоровья героя в GodVille. Автор: Seryiza (Сериза)",
  "icons": {
    "128": "icon-128.png",
    "64": "icon-64.png",
    "16": "icon-16.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "name": "GodVille Health Badge",
  "short_name": "GodVille Health",
  "permissions": [
    "alarms",
    "tabs",
    "webNavigation",
    "*://godville.net/"
   ],
   
  "version": "1.1",
  "manifest_version": 2
}