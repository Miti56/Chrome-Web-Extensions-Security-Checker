    "background",
    "alarms",
    "notifications",
    "tabs",
	"https://yummi.club/*",
	"http://feeds.feedburner.com/*"
  ],
  "content_security_policy": "img-src 'self' http://www.google-analytics.com https://yummi.club http://feeds.feedburner.com/; script-src 'self' https://ssl.google-analytics.com; object-src 'self'; connect-src 'self' https://yummi.club http://feeds.feedburner.com/"
