{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Рецепты, Новости и Советы c Yummi.club",
  "short_name": "Yummi.club",
  "version": "2.3",
  "manifest_version": 2,
  "description": "Самые свежие Рецепты, Новости и Советы c Yummi.club",
  "homepage_url": "https://yummi.club",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  },
  "default_locale": "ru",
