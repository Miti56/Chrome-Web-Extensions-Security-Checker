{
"update_url": "https://clients2.google.com/service/update2/crx",

	"manifest_version": 2,

	"name": "PDAdb.net",
	"description": "Get the latest technical information about mobile devices from the largest device database in the world.",
	"version": "0.1.4",

	"permissions": [
					"http://pdadb.net/rss/"
				   ],

    "icons": {
    	"16": "img/logo16.png",
    	"48": "img/logo48.png",
    	"128": "img/logo128.png"
    },
	
	"browser_action": {
		"default_icon": "img/icon.png",
		"default_popup": "popup.html"
		},

	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
