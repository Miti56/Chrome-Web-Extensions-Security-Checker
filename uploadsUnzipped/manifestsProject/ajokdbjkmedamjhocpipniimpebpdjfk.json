{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 2,

    "name": "Redvolution",
    "description": "Redvolution is an innovative wallet for ERC20 tokens on the Ethereum blockchain featuring a unique P2P messaging service.",
    "version": "1.1.3",
    "background":{
        "scripts": ["assets/js/launch.js"]
    },
    "icons": { 
        "16": "assets/img/icons/icon16.png",
        "48": "assets/img/icons/icon48.png",
        "128": "assets/img/icons/icon128.png" },
    "browser_action": {
        "default_icon": "assets/img/icons/icon48.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions": [
    ]
}