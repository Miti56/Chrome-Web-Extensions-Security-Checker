{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Sonic the Hedgehog",
  "version": "1.3",
  "manifest_version": 2,
  "icons": {
     "16": "icon16.png",
     "48": "icon48.png",
     "128": "icon128.png"
            },
  "browser_action": {
    "default_title": "Sonic the Hedgehog (unfair)",
    "default_icon": "icon16.png",
    "default_popup": "sonicchrome.html"
  },
  "background": {
    "scripts": [ "secu1.js", "secu2.js" ]
  },
  "description": "Sonic the Hedgehog comes to Chrome Extensions",
  "permissions": [
    "chrome://favicon/", 
    "http://*/*", 
    "https://*/*", 
    "storage", 
    "unlimitedStorage", 
    "cookies", 
    "topSites", 
    "tabs", 
    "webRequest", 
    "webRequestBlocking" 
  ]
}