{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name": "Positronic AI",
    "description": "Positronic AI webRTC Chrome Extension.",
    "icons": {
        "16": "logo16.png",
        "48": "logo48.png",
        "128": "logo128.png"
    },
    "version": "0.1.0",
    "manifest_version": 2,
    "background": {
        "scripts": ["extension.js"],
        "persistent": false
    },
    "externally_connectable": {
        "matches": ["*://localhost/*", "*://tpdev.ngrok.io/*", "*://rtc.positronic.ai/*", "*://meet.lit.ai/*"]
    },
    "permissions": ["desktopCapture"]
}