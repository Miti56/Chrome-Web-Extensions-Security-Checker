{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "StartDeck",
  "version": "1.3",
  "manifest_version": 2,
  "description": "This extension enables Google Docs automation for the StartDeck platform.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "*://docs.google.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "web_accessible_resources": [
    "favicon.ico"
  ],
  "icons": {
    "16": "images/stardeck-logo.png",
    "32": "images/stardeck-logo.png",
    "48": "images/stardeck-logo-48.png",
    "128": "images/stardeck-logo-128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "images/stardeck-logo.png",
      "32": "images/stardeck-logo.png",
      "48": "images/stardeck-logo-48.png",
      "128": "images/stardeck-logo-128.png"
    },
    "default_popup": "popup.html"
  }
}
