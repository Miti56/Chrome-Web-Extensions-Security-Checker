{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "eBay.it",
  "version": "1.1",
  "description": "Tasto eBay e strumenti di ricerca per eBay Italia",
  "homepage_url": "http://www.shoppingaddons.com",
  
  "background": {
  	"scripts": ["app.js"]
  },
  
  "manifest_version": 2,
	
  "omnibox": { "keyword" : "ebay" },
  
  "icons": { 
  	"16": "16.png" ,
  	"48": "48.png",
    "128": "128.png"
	},
	
	"permissions": [
    "webRequest","webRequestBlocking",
    "*://rover.ebay.com/"
  ],
	
  "browser_action": {
    "default_icon": "16.png",
	  
    "default_title" : "eBay"
  }
}