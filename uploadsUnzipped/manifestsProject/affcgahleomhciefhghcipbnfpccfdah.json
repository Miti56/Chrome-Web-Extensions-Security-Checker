{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name" : "TTD Screen Sharing",
  "author": "TTL, Inc.",
  "version" : "2.3",
  "manifest_version" : 2,
  "minimum_chrome_version": "34",
  "description" : "This Chrome extension is developed primary for https://www.ttlhome.com It doesn't do anything except capture content of your screen.",
  "homepage_url": "https://www.ttlhome.com",
  "background": {
    "scripts": ["background-script.js"],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "*://*.ttlhome.com/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
