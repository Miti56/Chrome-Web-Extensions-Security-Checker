{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name" : "Screen Capturing",
    "author": "CAMEMIS",
    "version" : "0.0.1",
    "manifest_version" : 2,
    "minimum_chrome_version": "34",
    "description" : "Screen capture extension allows you to capture your screen to use with WebRtc.",
    "homepage_url": "http://camemis-learn.com/",
    "background": {
        "scripts": ["background-script.js"],
        "persistent": false
    },
    "content_scripts": [ {
       "js": [ "content-script.js" ],
       "all_frames": true,
       "run_at": "document_end",
       "matches": ["https://*.camemis-learn.com/*"]
    }],
    "externally_connectable": {
        "matches": ["https://*.camemis-learn.com/*"]
    },
    "icons" : {
        "48" : "icon.png"
    },
    "permissions": [
        "desktopCapture"
    ],
    "web_accessible_resources": [
        "icon.png"
    ]
}