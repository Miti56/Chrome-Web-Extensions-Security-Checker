
{
"update_url": "https://clients2.google.com/service/update2/crx",


  "name": "Remote Flashlight",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Turn FlashLight on/off your android phone remotely",
  "icons": { "16": "icon.png", "48": "icon48.png" },

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "browser_action": {
    "default_title": "FlashLight",
    "default_icon": { "19": "icon19.png", "38": "icon38.png" },
    "default_popup": "register.html"
  },

  "permissions": [
    "https://vakansija.com/*",
    "storage"
  ],

  "web_accessible_resources": [
    "icon.png"
  ]

}
