{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name" : "Meetrix Screen Capturing XYZ",
    "author": "Meetrix",
    "version" : "8.1",
    "manifest_version" : 2,
    "minimum_chrome_version": "40",
    "description" : "Capture full-screen or specific application's screen on any HTTPs domain! Even audio+tab!",
    "homepage_url": "https://github.com/muaz-khan/Chrome-Extensions",
    "background": {
        "scripts": ["background-script.js"],
        "persistent": false
    },
    "externally_connectable": {
       "matches": ["https://online-screen-recorder.com/*"]
    },
    "icons" : {
        "48" : "icon.png"
    },
    "permissions": [
        "desktopCapture"
    ],
    "web_accessible_resources": [
        "icon.png"
    ]
}
