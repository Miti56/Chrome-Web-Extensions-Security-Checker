{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Mortgage Calculator",
  "version": "0.3",
  "manifest_version": 2,
  "description": "Hands down, the best mortgage calculator on the Chrome Web Store",
  "icons": {
    "16": "icon.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Mortgage Calculator",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
  	"unlimitedStorage",
  	"geolocation",
  	"storage",
  	"<all_urls>"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://s3.amazonaws.com; object-src 'self'"
}