{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name" : "Legal Square Screenshare Extension",
    "author": "Legal Square",
    "version" : "0.0.2",
    "manifest_version" : 2,
    "minimum_chrome_version": "34",
    "description" : "Chrome Extension granting WebRTC screen capturing capabilities to Legal Square Web Conferencing.",
    "homepage_url": "http://legalsquare.com.au/",
    "background": {
        "scripts": ["background-script.js"],
        "persistent": true
    },
    "externally_connectable": {
       "matches": [
           "*://*.legalsquare.com.au/*",
		   "*://*.meetio.net.au/*"
         ]
    },
    "icons" : {
        "48" : "icon.png"
    },
    "permissions": [
        "desktopCapture"
    ],
    "web_accessible_resources": [
        "icon.png"
    ]
}

