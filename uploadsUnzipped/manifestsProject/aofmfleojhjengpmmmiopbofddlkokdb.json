{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,
  "name": "AltYes",
  "short_name": "AltYes",
  "version": "1.0.0",
  "icons": {
    "16": "assets/imgs/icon16.png",
    "48": "assets/imgs/icon48-2.png",
    "128": "assets/imgs/icon128.png"
  },
  "description": "Share and monetize your experiences on many social media networks including the Steem Blockchain.",
  "permissions": ["storage", "tabs"],
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "AltYes extension",
    "default_icon": {
      "48": "assets/imgs/icon48-2.png"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
