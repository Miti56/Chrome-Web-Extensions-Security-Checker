{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 2,
    "name": "Pouch",
    "version": "1.0.1",

    "description": "An extension that lets you save pages into a pouch as an alternative to opening them in a new tab",
    "icons": {
        "128": "icon.png"
    },
    "browser_action": {
        "default_icon": {
            "32": "icon.png"
        },
        "default_title": "Pouch",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.bundle.js"],
        "persistent": false
    },
    "permissions": [
        "activeTab",
        "clipboardWrite",
        "contextMenus",
        "tabs",
        "storage",
        "webNavigation",
        "http://*/*",
        "https://*/*"
    ]
}