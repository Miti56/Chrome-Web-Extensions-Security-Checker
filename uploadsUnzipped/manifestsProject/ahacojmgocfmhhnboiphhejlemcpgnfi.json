{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Preciate",
  "description": "Give recognition with Preciate directly from Gmail.  Itâ€™s as easy as sending an email.",
  "version": "1.01",
  "short_name": "Preciate",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://inbox.google.com/*"
      ],
      "js": ["inboxsdk.js","content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "https://mail.google.com/",
    "https://inbox.google.com/"
  ],
  "externally_connectable": {
    "matches": ["*://*.preciate.org/*"]
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "manifest_version": 2

}
