{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name" : "Multi-server Screenshare Extension",
    "author": "Alessiocraft",
    "version" : "0.0.1",
    "manifest_version" : 2,
    "minimum_chrome_version": "34",
    "description" : "Chrome Extension granting WebRTC screen capturing capabilities to multiserver meetings.",
    "homepage_url": "http://multi-server.pro/",
    "background": {
        "scripts": ["background-script.js"],
        "persistent": true
    },
    "externally_connectable": {
       "matches": [
           "*://*.multi-server.pro/*"
         ]
    },
    "icons" : {
        "48" : "icon.png"
    },
    "permissions": [
        "desktopCapture"
    ],
    "web_accessible_resources": [
        "icon.png"
    ]
}

