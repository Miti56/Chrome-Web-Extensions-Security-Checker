{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name": "ManageContactsWp",
    "manifest_version": 2,
    "description": "Uma extens√£o para gerenciamento de contatos  :)",
    "version": "1.0.0",
    "permissions": [
        "unlimited_storage",
        "notifications",
        "contextMenus",
        "cookies",
        "storage",
        "idle",
        "tabs",
        "activeTab"
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.whatsapp.com/*"
            ],
            "js": [
                "js/jquery.js",
                "js/main.js"
            ],
            "css": [
                "css/bootstrap.min.css"
            ],
            "run_at": "document_end",
            "persistent": false
        }
    ]
}