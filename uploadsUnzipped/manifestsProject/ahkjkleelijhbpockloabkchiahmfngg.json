{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Searchy",  
  "version": "1.0",   
  "description": "Make the web search easier",
  "permissions": [   
      "activeTab",   
      "declarativeContent",   
      "storage",     
      "tabs",        
      "http://*/*", 
      "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"],  
    "persistent": false           
  },
  "page_action": {     
    "default_popup": "options.html",
    "default_title": "searchy make search easier", 
    "default_icon": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo48.png",
      "128": "images/logo128.png"
    }
  },
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "manifest_version": 2
}