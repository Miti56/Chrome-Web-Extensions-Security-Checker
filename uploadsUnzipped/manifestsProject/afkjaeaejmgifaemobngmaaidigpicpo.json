{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Copy Customized URL",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Extension for copying URL with customized formats.",
  "icons": {
    "128": "icons/icon48.png",
    "48": "icons/icon128.png"
  },
  "background": {
      "scripts": ["src/background.js"],
      "persistent": false
    }
  ,
  "options_page" : "options.html",
  "permissions": [
      "tabs",
      "background",
      "clipboardWrite",
      "storage",
      "http://*/*",
      "https://*/*"
    ],
    "browser_action": {
        "default_popup": "popup.html"
    }
}
