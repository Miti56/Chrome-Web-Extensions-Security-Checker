{
   "background": {
    "scripts": ["background.js"]
   },
   "content_scripts": [ {
      "all_frames": false,
      "js": [ "AmazonLinker.js" ],
      "matches": [ "http://*.amazon.com/*" ],
      "run_at": "document_idle"
   } ],
   "description": "This extension searches and displays book availability at Lovejoy Library, I-Share, and WorldCat on Amazon's book page.",
   "name": "Amazon Library Linker For Lovejoy Library",
   "short_name": "Amazon Linker",
   "options_page": "options.html",
   "permissions": [ "http://vufind.carli.illinois.edu/", "http://www.worldcat.org/" ],
   "update_url": "http://clients2.google.com/service/update2/crx",
   "manifest_version": 2,
   "version": "1.1"   
}
