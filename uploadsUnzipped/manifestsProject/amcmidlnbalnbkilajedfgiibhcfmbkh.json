{
"update_url": "https://clients2.google.com/service/update2/crx",

	"manifest_version": 	2,
	"name": 				"Check It Later Extension",
	"version": 				"1.3.5",
	"description": 			"A full page list of unread links from ReadItLaterList.com with tagging and filtering options",
	"browser_action": {
		"default_icon": 	"icon.png",
		"default_title": 	"Check It Later"
	},	
	"icons": {
		"16": "icon_16.png",
		"32": "icon_32.png",
		"128": "icon_128.png"
	},
	"options_page":			"html/options.html",
	"background":	{
		"page": 			"html/background.html"
	},
	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com 'unsafe-eval'; object-src 'self'",
	"permissions": [
			"https://readitlaterlist.com/"			
	]
}