{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Custom Fields for Shopify",
  "short_name": "ShopifyCC",
  "version": "0.0.4",
  "description": "Adds custom fields to the Shopify Dashboard (for free!)",
  "homepage_url": "http://freakdesign.com.au",
  "permissions": [
    "activeTab"
  ],
  "icons": {
    "16": "icons/icons-16.png",
    "48": "icons/icons-48.png",
    "128": "icons/icons-128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Load Custom Fields",
    "default_icon": "icons/icons-16.png"
  },
  "manifest_version": 2
}