{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 2,
    "name": "Pull Request Approval Probability Estimation",
    "short_name": "PR Approval Probability",
    "description": "Estimate the probability of a pull request being merged within a given time frame",
    "version": "1.0.1",
    "minimum_chrome_version": "1",
    
    "browser_action": {
        "default_icon": "assets/icon_16.png",
        "default_popup": "index.html",
        "default_title": "Pull Request Approval Probability Estimation"
    },
    
    "icons": {
        "128": "assets/icon_128.png",
        "16": "assets/icon_16.png"
    },
    
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://maxcdn.bootstrapcdn.com; object-src 'self'",

    "permissions": [
        "storage",
        "https://ajax.googleapis.com/",
        "https://maxcdn.bootstrapcdn.com/"
    ]
}
