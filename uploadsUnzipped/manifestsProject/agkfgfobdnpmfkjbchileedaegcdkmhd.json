{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,
  "name": "Oroscopo giornaliero",
  "version": "1.0",
  "description": "Ogni giorno il tuo oroscopo del giorno con un click.",
  "icons": {
    "48": "img/ChromeExtension48.png",
    "128": "img/ChromeExtension128.png",
    "16": "img/ChromeExtension16.png"
  },
  "browser_action": {
    "default_icon": "img/ChromeExtension19.png",
    "default_title": "Clicca qui per leggere il tuo oroscopo di oggi.",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "tabs"
  ]
}