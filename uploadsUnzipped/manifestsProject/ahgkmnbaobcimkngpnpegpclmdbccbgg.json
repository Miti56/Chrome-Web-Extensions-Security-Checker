{
"update_url": "https://clients2.google.com/service/update2/crx",

	"manifest_version": 2,
	"name": "SiteTimeBlocker",
	"description": "Блокирует отвлекающие от работы вас сайты.",
	"version": "1.1.1",
    
    "icons": {
    "32": "favicon32.png"
  }, 
    
    "browser_action": {
    "default_title": "SiteTimeBlocker",
    "default_icon": "favicon32.png",
    "default_popup": "options.html"
    },

	"background": {
        "scripts": ["class.js","storage.js","background.js"]
	},
  "options_page": "options.html",
	"permissions": ["tabs","storage"]
}

