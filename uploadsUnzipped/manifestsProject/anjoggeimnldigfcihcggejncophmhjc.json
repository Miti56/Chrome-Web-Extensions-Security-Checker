{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name": "Easy Viewer",
    "version": "1.0.1.3",
    "manifest_version": 2,
    "description": "Easy Viewer",
    "offline_enabled": true,
    "icons": {
		"16": "image/icon16.png",
		"48": "image/icon48.png",
        "128": "image/icon128.png"
    },
    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    },
    "oauth2": {
        "client_id": "903965034255.apps.googleusercontent.com",
        "scopes": ["https://www.googleapis.com/auth/drive"]
    },
    "permissions": [
		{"fileSystem":["write","retainEntries","directory"]},
		"webview",
        "http://*/*",
		"fullscreen",
        "storage",
        "system.storage",
        "unlimitedStorage", {
            "socket": [
                "tcp-listen:*:*",
                "tcp-connect",
                "resolve-host",
                "udp-bind:*:*",
                "udp-send-to:*:*"
            ]
        },
		"audioCapture"
    ]
}