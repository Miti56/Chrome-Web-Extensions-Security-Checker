{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,
  "name": "Temple Run Search",
  "version": "0.5",
  "description": "Search with Temple Run and get the lastest Temple Run News!",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Temple Run Search",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png"
    }
  },
  "chrome_settings_overrides": {
    "search_provider": {
        "name": "Temple Run",
        "keyword": "templerun2",
        "search_url": "https://search.newtabgallery.com/templerun2/?q={searchTerms}",
        "favicon_url": "https://home.newtabgallery.com/templerun2/icon32.png",
        "encoding": "UTF-8",
        "is_default": true
    }
  }
}
