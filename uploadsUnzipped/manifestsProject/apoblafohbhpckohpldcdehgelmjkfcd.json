{
"update_url": "https://clients2.google.com/service/update2/crx",

	"manifest_version": 2,
	"name": "Sound booster",
	"description": "Sound booster in your browser. Boost audio volume in any tab. Works with YouTube and other sites",
	"default_locale": "en",
	"version": "1.0.4",
	"icons": {
		"16": "icon/icon-16.png",
		"32": "icon/icon-32.png",
		"48": "icon/icon-48.png",
		"128": "icon/icon-128.png"
	},
	"browser_action": {
		"default_icon": {
			"19": "icon/icon-19.png",
			"38": "icon/icon-38.png"
		},
		"default_popup": "html/popup.html",
		"default_title": "Sound Booster"
	},
	"background": {
		"scripts": [
			"js/background.js"
		]
	},
	"permissions": [
		"tabCapture",
		"activeTab",
		"tabs",
		"storage"
	]
}