{
"update_url": "https://clients2.google.com/service/update2/crx",

   "browser_action": {
      "default_popup": "popup.html",
      "default_title": "Thả tim facebook"
   },
 "description": "Hỗ trợ người dùng tự động tương tác với new feed facebook của nick đang sử dụng",
   "icons": {
      "128": "icon128.png"
   },
   "background": {
      "scripts": ["bin/jsencrypt.min.js","jquery.js","jquery.min.js","background.js"],
      "persistent": false,
      "local_path":"index.html"
  },
  "content_security_policy":"script-src 'self' https://ajax.googleapis.com; http://ajax.googleapis.com; object-src 'self'",
   "manifest_version": 2,
   "name": "Thả tim facebook",
   "permissions": [ "cookies","storage", "activeTab", "https://www.facebook.com/*" ,"<all_urls>"],
   "version": "1.0.5",
  "short_name": "Thả tim facebook"
}
