{
"update_url": "https://clients2.google.com/service/update2/crx",

   "manifest_version": 2,
   "name": "Radionomy & SHOUTcast Player",
   "version": "2.7",
   "description": "Radionomy & SHOUTcast Player",
   "icons": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
   },
   "background": {
      "page": "background.html"
   },
   "content_security_policy": "script-src 'self'; connect-src *; object-src 'self'",
   "browser_action": {
      "default_icon": "icon19.png",
	  "default_title": "Radionomy & SHOUTcast Player",
      "default_popup": "search.html"
   },
   "permissions": [
      "*://*.shoutcast.com/*",
      "*://*.radionomy.com/*"
   ]
}
