{
  "manifest_version": 2,

  "name": "G+ Escalations for TCs DEV",
  "description": "This extension allows you to write informations from a G+ Profile in a Google Docs Spreadsheet",
  "version": "0.0.2",

  "permissions": [
    "contextMenus",
    "tabs",
    "identity",
    "https://script.google.com/*"
  ],

  "oauth2": {
     "client_id": "221925474112.apps.googleusercontent.com",
     "scopes": [ "https://www.googleapis.com/auth/plus.me", "https://www.googleapis.com/auth/userinfo.email" ]
  },

  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",

  "icons": {
    "16": "images/icon-bitty.png",
    "48": "images/icon-small.png",
    "128": "images/icon-large.png"
  },

  "background": {
      "scripts": ["js/tabs.js","js/app.js"]
  },

  "update_url": "https://clients2.google.com/service/update2/crx"

}