{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,
  "name": "Criminal Case Search",
  "version": "0.4",
  "description": "Search with Criminal Case and get the lastest Criminal Case Game News!",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Criminal Case Search",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png"
    }
  },
  "chrome_settings_overrides": {
    "search_provider": {
        "name": "Criminal Case",
        "keyword": "criminalcase",
        "search_url": "https://search.newtabgallery.com/omnibus-search.php?q={searchTerms}",
        "favicon_url": "https://home.newtabgallery.com/criminalcase/icon32.png",
        "encoding": "UTF-8",
        "is_default": true
    }
  }
}
