{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,
  "name": "The Shire extension",
  "version": "1.0",
  "description": "This is a tool to add content in our beloved Shire",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },

  "permissions": [
          "tabs",
          "activeTab", "declarativeWebRequest", "*://*/*"
        ],
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html",
    "permissions": [
  "store"
]
  },
  "background": {
  "page":"popup.html",
  "persistent": false
}
}
