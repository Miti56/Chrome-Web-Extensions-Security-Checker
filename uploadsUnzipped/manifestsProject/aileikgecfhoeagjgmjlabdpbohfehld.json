	{
"update_url": "https://clients2.google.com/service/update2/crx",

    	"manifest_version": 2,
    	"name": "Rockwood Wallet",
    	"description": "Rockwood Wallet",
    	"version": "1.0.2",
		"background": {
			"persistent": true,			"scripts": ["js/jquery.min.js" ]

		},

    	"browser_action": {
			"default_icon": "images/launcher_foreground.png" ,
			"default_popup": "KR/dispatcher.html"
    	} ,
    	"permissions": [
			"file://*",
			"webRequest",
        	"activeTab",        	
    		"declarativeContent", 
			"storage",
			"notifications",
			"http://localhost/*",
      		"contextMenus" 
    	]
	}


