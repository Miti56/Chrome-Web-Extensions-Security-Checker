{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Covid-19ita",
  "description": "Un'estensione per visualizzare velocemente i dati relativi ai casi di Covid-19 in Italia (sia a livello nazionale che regionale).",
  "version": "1.7.2",
  "permissions": [
    "https://raw.githubusercontent.com/pcm-dpc/*",
    "notifications",
    "storage",
    "alarms"
  ],
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_title": "covid-19itaextension",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  }
}