{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 2,
    "name": "InkyBinkyDinky Screen Sharing",
    "version": "0.1",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background": {
        "scripts": [ "extension.js" ],
        "persistent": false
    },
    "externally_connectable": {
      "matches": [
        "*://localhost/*",
        "*://inkybinkydinky.com/*",
        "*://teachmeon.com/*",
        "*://showmeon.com/*",
        "*://consultmeon.com/*"
      ]
    },
    "permissions": [
        "desktopCapture",
        "tabs"
    ]
}