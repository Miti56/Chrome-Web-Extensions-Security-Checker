{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,
  "name": "Truebodh Vclass Extension",
  "description": "This extension allows you to stream your desktop into meetings with Vclass Meetings.",
  "version": "0.1.6",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "tblogo16x16.png",
    "48": "tblogo48x48.png",
    "128": "tblogo128x128.png"
  },
  "background": {
        "scripts": [ "background.js" ],
        "persistent": true
  },
  "permissions": [
      "desktopCapture"
  ],
  "externally_connectable": {
      "matches": [
          "*://vclass.truebodh.com/*"
      ]
  }
}
