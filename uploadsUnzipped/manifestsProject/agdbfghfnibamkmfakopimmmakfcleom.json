{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,

  "name": "OPscT Notifier",
  "description": "This extension notifies the user if OPscT's stream is live",
  "version": "0.0.0.2",
  "background": { 
  "scripts": ["background.js"], 
  "persistent": false
  },
  "browser_action": {
    "default_icon": "opsct_rnd_19.png",
    "default_title": "twitch.tv/OPscT"
  },
  "permissions": [
    "activeTab",
    "alarms",
    "https://ajax.googleapis.com/",
    "https://api.twitch.tv/kraken/*"
  ]
  
}