{
	"author":"Efiria",

	"manifest_version":2,

	"name":"Extension Stream twitch Maria",
	"description":"This extension will track if Maria is streaming or not",
	"version":"1.2",

	"browser_action":{
		"default_icon":"/img/ree.png",
		"default_title":"I'm taking a nap"
	},

   "background": {
   		"persistent": true,
      	"scripts": [ 
      		"background.js"
      ]
   },
	"permissions": [
		"activeTab", 
		"https://ajax.googleapis.com/",
		"https://api.twitch.tv/kraken/*", 
		"notifications" 
	],

	"update_url": "https://clients2.google.com/service/update2/crx",

	"icons":{
		"128" : "img/hi.png"
	}
}