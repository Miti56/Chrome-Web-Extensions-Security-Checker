{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Airy.TV - Free TV",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Free TV from the cloud to your desktop. Watch over 50+ channels and counting by downloading the Airy.TV extension today.",
  "homepage_url": "https://airy.tv",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon16.png",
    "default_title": "Airy.TV",
    "default_popup": "src/popup/popup.html"
  },
  "permissions": [
    "notifications",
    "tabs",
    "storage",
    "webRequest",
    "http://*.api.airy.tv/*",
    "https://*.api.airy.tv/*"
  ]
}
