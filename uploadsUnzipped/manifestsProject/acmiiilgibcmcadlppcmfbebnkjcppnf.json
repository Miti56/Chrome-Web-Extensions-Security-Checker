{
"update_url": "https://clients2.google.com/service/update2/crx",

    "author": "",
    "browser_action": {
        "default_title": "Bitista",
        "default_icon": {
            "16": "assets/icons/icon-16.png",
            "32": "assets/icons/icon-32.png",
            "48": "assets/icons/icon-48.png",
            "128": "assets/icons/icon-128.png"
        },
        "default_popup": "index.html"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Alt+B"
            }
        }
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://bitista.com; style-src 'self' https://*.google.com https://*.googleapis.com; object-src 'self'",
    "description": "See live Bitcoin prices. Convert amounts to or from 157 currencies.",
    "icons": {
        "16": "assets/icons/icon-16.png",
        "32": "assets/icons/icon-32.png",
        "48": "assets/icons/icon-48.png",
        "128": "assets/icons/icon-128.png"
    },
    "manifest_version": 2,
    "name": "Bitista",
    "permissions": [
        "storage",
        "*://localhost/*",
        "*://*.bitista.com/*",
        "*://*.googleapis.com/*"
    ],
    "version": "1.0.2"
}